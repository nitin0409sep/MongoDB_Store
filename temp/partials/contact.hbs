<div class="container-fluid mt-5 contact-style" id="contactid">
    <div clas="row">
        <div class="col-md-10 col-12 mx-auto">

            <h1 class="text-center main-heading">Contact</h1>
            <p class="text-center sub-heading">We will be happy to help u</p>

            <div class="row">
                <div class="col-md-6 col-12 mx-auto">

                    {{!-- Form Start --}}
                    <form action="/contact" method="POST">

                        {{!-- Full Name --}}
                        <div class="form-group">
                            <label for="exampleInputPassword1">Name</label>
                            <input type="text" class="form-control" autocomplete="off" name="name"
                                id="exampleInputPassword1" placeholder="Full Name">
                        </div>

                        {{!-- Email --}}
                        <div class="form-group">
                            <label for="exampleInputEmail1">Email address</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" autocomplete="off"
                                name="email" aria-describedby="emailHelp" placeholder="Enter your email">
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>

                        {{!-- Phone Number --}}
                        <div class="form-group">
                            <label for="exampleInputPassword1">Phone</label>
                            <input type="number" class="form-control" autocomplete="off" name="phone"
                                id="exampleInputPassword1" placeholder="Phone Number">
                        </div>

                        {{!-- Message --}}
                        <div class="form-group">
                            <label for="exampleInputPassword1">Message</label>
                            <input type="text" class="form-control" autocomplete="off" name="message"
                                id="exampleInputPassword1" placeholder="Message">
                        </div>
                        <button type="submit" class="btn-style btn-primary">Submit</button>
                    </form>

                    {{!-- Form End's --}}
                </div>
            </div>
        </div>
    </div>
</div>